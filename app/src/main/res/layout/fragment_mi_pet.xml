<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".vista_fragment.MiPetFragment">

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
android:orientation="vertical"
android:layout_width="match_parent"
android:layout_height="match_parent">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center">

    <com.mikhaellopez.circularimageview.CircularImageView
        android:id="@+id/civFotoPet"
        android:layout_width="@dimen/size_images"
        android:layout_height="@dimen/size_images"
        android:src="@drawable/pet_01"
        app:civ_border_color="@color/colorSecondaryText"
        app:civ_border_width="1dp"
        app:civ_shadow="true"
        app:civ_shadow_color="@color/colorBlanco"
        app:civ_shadow_radius="1dp" />
    <TextView
        android:id="@+id/tvPetNombre"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textStyle="bold"/>

</LinearLayout>

<androidx.recyclerview.widget.RecyclerView
    android:id="@+id/rvFotosPet"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/activity_horizontal_margin"
    android:layout_marginTop="?attr/actionBarSize"/>
</LinearLayout>

</FrameLayout>